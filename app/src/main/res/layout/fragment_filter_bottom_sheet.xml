<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_round_top_bg_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FilterBottomSheet">

   <TextView
       android:id="@+id/tv_sort"
       android:layout_width="0dp"
       android:layout_height="50dp"
       android:text="Filter by"
       android:gravity="center"
       android:textColor="@color/black"
       android:textFontWeight="800"
       app:layout_constraintBottom_toTopOf="@+id/tv_sort_date"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sort_date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Date"
        android:gravity="center"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/view_div1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_div1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray_variant"
        app:layout_constraintBottom_toTopOf="@id/tv_sort_title"/>

    <TextView
        android:id="@+id/tv_sort_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Title"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>